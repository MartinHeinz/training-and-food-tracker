<TrainingScheduleCreator>:  # TODO Chcem vytvorit novy template -> MDList + vytvorenie a search Exercises(+ drag and drop?)
    BoxLayout
        MDLabel:
            font_style: 'Body1'
            theme_text_color: 'Primary'
            text: "Schedule Creator"
            halign: 'center'


<InputsBox>:
    left_field: left_field
    right_field: right_field
    orientation: 'horizontal'
    padding: (5, 0, 5, 0)
    pos_hint: {"top": 1, "x": 0}
    size_hint: (1, None)
    height: dp(46)
    MyTextField:
        id: left_field
    DateField:
        id: right_field

<SearchLayout>:
    search_field: search_field
    search_by_field: search_by_field
    result_list: result_list
    orientation: "vertical"

    BoxLayout:
        id: query_boxes
        orientation: "horizontal"
        padding: dp(5), 0, dp(5), dp(5)
        spacing: 10
        SearchBox:
            id: search_field
            size_hint_x: 0.6
        ValueBox:
            id: search_by_field
            size_hint_x: 0.4
    ScrollView:
        do_scroll_x: False
        size_hint_x: None
        size_hint_y: None
        width: self.parent.width
        height: self.parent.result_list_height  # TODO parametrizovat toto
        MDList:
            id: result_list

<OuterBox>:
    ex_list: ex_list
    search_layout: search_layout
    orientation: "tb-lr"
    FloatLayout
        size_hint: (1, 0.9)
        ScrollView:
            size_hint: (1, 0.6)
            pos_hint: {"top": 1, "x": 0}
            do_scroll_x: False
            MDList:
                id: ex_list
        SearchLayout:
            id: search_layout
            hint_text_left: "Search"
            hint_text_right: "Search by"
            size_hint: (1, 0.4)
            pos_hint: {"top": 0.4, "x": 0}
            result_list_height: self.height * .75
