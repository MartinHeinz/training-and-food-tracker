
<GoalsScreen>:
    training_plan_list: training_plan_list
    tabbed_panel: tabbed_panel
    toolbar: next(child for child in self.manager.parent.children if isinstance(child, Toolbar))
    BoxLayout:
        size_hint: (0.5, 1)
        pos_hint: {"top": 1, "x": 0}
        MDTabbedPanel:
            id: tabbed_panel

    BoxLayout:
        orientation: "vertical"
        size_hint: (0.5, 1)
        pos_hint: {"top": 1, "x": 0.5}
        ScrollView:
            size_hint: (1, 1)
            pos_hint: {"top": 1, "x": 0}
            height: self.parent.height
            do_scroll_x: False
            MDList:
                id: training_plan_list
                height: self.minimum_height
